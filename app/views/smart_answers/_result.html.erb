<div class="article-container outcome">
  <article class="outcome group">
    <div class="result-info" data-debug-template-path="<%= outcome.relative_erb_template_path %>">
      <div class="inner group govuk-govspeak">
        <% if outcome.title.present? %>
          <div class="summary"><h2 class="result-title heading-large"><%= outcome.title %></h2></div>
        <% end %>
        <%= outcome.body %>
      </div>
    </div>
    <% if outcome.next_steps.present? %>
      <div class="related-wrapper column-one-third">
        <div class="related next-steps">
          <h2 class="heading-large">Next steps</h2>
          <%= outcome.next_steps %>
        </div>
      </div>
    <% end %>
  </article>
</div>

<script type="text/javascript">
  $(function() {
    var flowName = '<%= @name %>';
    var page = document.location.pathname;
    var options = {
      label: flowName,
      nonInteraction: true,
      page: page
    };
    GOVUK.analytics.trackEvent('Smart Answer', 'Completed', options);
  });
</script>
