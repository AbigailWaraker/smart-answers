<% if @presenter.has_meta_description? %>
  <% content_for :head do %>
    <meta name="description" content="<%= @presenter.meta_description %>">
  <% end %>
<% end %>

<header class="page-header group">
  <div>
    <h1>
      <%= @presenter.title %>
    </h1>
  </div>
</header>

<div class="article-container group">
  <article role="article" class="group">
    <div class="inner">
      <div class="intro">
        <% if @presenter.has_body? %>
          <%= @presenter.body %>
        <% end %>
        <p class="get-started">
          <a rel="nofollow" href="<%= smart_answer_path(@name, started: 'y') %>" class="big button">Start now</a>
        </p>
      </div>
      <%= @presenter.post_body if @presenter.has_post_body? %>
    </div>
  </article>
</div>
