<fieldset>
  <legend>
    <%= render partial: "smart_answers/label", locals: { question: question } %>
  </legend>

  <div class="form-group">
    <% unless question.default_day %>
      <label for="response_day" class="form-label">
        Day
      </label>
      <%= select_day default_for_date(prefill_value_for(question, :day)), prefix: "response", :prompt => '', class: "form-control" %>
    <% end %>
    <% unless question.default_month %>
      <label for="response_month" class="form-label">
        Month
      </label>
      <%= select_month default_for_date(prefill_value_for(question, :month)), prefix: "response", prompt: '', class: "form-control" %>
    <% end %>
    <% unless question.default_year %>
      <label for="response_year" class="form-label">
        Year
      </label>
      <%= select_year default_for_date(prefill_value_for(question, :year)), prefix: "response", prompt: '', :start_year => question.start_date.year, :end_year => question.end_date.year, class: "form-control" %>
    <% end %>
  </div>
</fieldset>
