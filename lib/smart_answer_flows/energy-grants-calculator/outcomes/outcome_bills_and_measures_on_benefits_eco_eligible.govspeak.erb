<% content_for :title do %>
  <% if calculator.under_green_deal? %>
    <% render partial: 'title_under_green_deal.govspeak.erb' %>
  <% else %>
    <% render partial: 'title_energy_supplier.govspeak.erb' %>
  <% end %>
<% end %>

<% content_for :body do %>
  <% if calculator.under_green_deal? %>
    <%= render partial: 'callout_under_green_deal.govspeak.erb' %>
  <% end %>
  <% if calculator.both_help? %>
    <% if calculator.eligible_for_winter_fuel_payment? %>
      <%= render partial: 'winter_fuel_payments.govspeak.erb' %>
    <% end %>
    <% if (calculator.benefits_claimed & %w(esa pension_credit)).any? || calculator.incomesupp_jobseekers_1? %>
      <% if calculator.benefits_claimed.include?('pension_credit') %>
        <%= render partial: 'warm_home_discount.govspeak.erb', locals: {calculator: calculator} %>
      <% end %>
      <%= render partial: 'cold_weather_payment.govspeak.erb' %>
    <% end %>
    <% if (calculator.benefits_claimed & %w(esa child_tax_credit pension_credit)).any? || calculator.incomesupp_jobseekers_1? || calculator.incomesupp_jobseekers_2? || calculator.benefits_claimed.include?('working_tax_credit') && calculator.age_variant == :over_60 %>
      <%= render partial: 'energy_company_obligation.govspeak.erb' %>
    <% end %>
  <% end %>


  <%= render partial: 'header_boilers_and_insulation.govspeak.erb' %>
  <% unless (calculator.features & %w(modern_boiler)).any? %>
    <%= render partial: 'opt_condensing_boiler.govspeak.erb' %>
  <% end %>
  <% unless (calculator.features & %w(cavity_wall_insulation mains_gas)).any? %>
    <%= render partial: 'opt_cavity_wall_insulation.govspeak.erb' %>
  <% end %>
  <% unless (calculator.features & %w(mains_gas solid_wall_insulation)).any? %>
    <%= render partial: 'opt_solid_wall_insulation.govspeak.erb' %>
  <% end %>
  <% unless (calculator.features & %w(draught_proofing mains_gas)).any? %>
    <%= render partial: 'opt_draught_proofing.govspeak.erb' %>
  <% end %>
  <% unless (calculator.features & %w(loft_insulation loft_attic_conversion)).any? || calculator.flat_property_type? %>
    <%= render partial: 'opt_loft_roof_insulation.govspeak.erb' %>
  <% end %>
  <% unless calculator.flat_type == "top_floor" %>
    <% if (calculator.features & %w(loft_attic_conversion)).any? || calculator.flat_property_type? %>
      <%= render partial: 'opt_room_roof_insulation.govspeak.erb' %>
    <% end %>
    <% unless calculator.modern_property? %>
      <%= render partial: 'opt_under_floor_insulation.govspeak.erb' %>
    <% end %>
  <% end %>
  <% if calculator.may_qualify_for_affordable_warmth_obligation? %>
    <%= render partial: 'may_qualify_for_affordable_warmth_obligation.govspeak.erb' %>
  <% end %>
  <%= render partial: 'opt_eco_help.govspeak.erb' %>
  <%= render partial: 'header_heating.govspeak.erb' %>
  <%= render partial: 'opt_better_heating_controls.govspeak.erb' %>
  <% unless (calculator.features & %w(mains_gas)).any? %>
    <%= render partial: 'opt_heat_pump.govspeak.erb' %>
    <%= render partial: 'opt_biomass_boilers_heaters.govspeak.erb' %>
    <%= render partial: 'opt_solar_water_heating.govspeak.erb' %>
  <% end %>
  <% unless (calculator.features & %w(modern_double_glazing)).any? %>
    <%= render partial: 'header_windows_and_doors.govspeak.erb' %>
    <%= render partial: 'opt_replacement_glazing.govspeak.erb' %>
  <% end %>
  <%= render partial: 'opt_renewal_heat.govspeak.erb' %>
  <%= render partial: 'help_and_advice.govspeak.erb' %>
  <%= render partial: 'help_and_advice_body.govspeak.erb' %>
<% end %>
